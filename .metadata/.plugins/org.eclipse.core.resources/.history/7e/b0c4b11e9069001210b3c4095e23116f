function JungleSound() {

	if (!buzz.isSupported()) {
		throw "No Audio Support";
	}

	this.backgrounds = new Object();
	this.currentBackground = null;

	// Preload the sound
	// auto, metadata, none
	buzz.defaults.preload = "none";
	
	// Play the sound when ready
	// bool
	buzz.defaults.autoplay = false;
	
	// Loop the sound
	// bool
	buzz.defaults.loop = false;
	
	// value to display when a time convertion is impossible
	buzz.defaults.placeholder = '--';
	
	// Duration of a fading effect
	// milliseconds
	buzz.defaults.duration = 1000;
	
	// Audio formats of your files
	buzz.defaults.formats = ['ogg', 'mp3'];
}

JungleSound.prototype.setBackground = function(path) {

	//Check that its already playing
	if (this.currentBackground != null && this.backgrounds[path] == this.currentBackground) {
		return;
	}

	for (var x in this.backgrounds) {
		console.log(x);
		this.backgrounds[x].fadeOut().stop();
	}

	console.log("Want " + path);

	if (this.backgrounds[path] == null) {

		var newSound = new buzz.sound([path + ".mp3", path + ".ogg"]);;
		this.backgrounds[path] = new buzz.sound([path + ".mp3", path + ".ogg"]);
		this.currentBackground = this.backgrounds[path];
	}

}
