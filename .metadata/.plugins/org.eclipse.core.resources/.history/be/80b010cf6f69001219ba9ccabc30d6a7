/**
 * The JungleMap js class is the clientside representation of the map
 * @author Blake Loring
 */

function JungleMap(w, h, tilew, tileh, tileset) {

	this.tileset = tileset;
	this.tilewidth = tilew;
	this.tileheight = tileh;
	this.container = this.generate(w, h);

}

JungleMap.prototype.generate = function(width, height) {

	var container = new createjs.Container();

	container.scaleX = 1.0;
	container.scaleY = 0.5;

	var innerContainer = new createjs.Container();
	innerContainer.rotation = 45;
	
	innerContainer.regX = (width * this.tilewidth) / 2.0;
	innerContainer.regY = (height * this.tileheight) / 2.0;

	for (var y = 0; y < height; y++) {
		
		for (var x = 0; x < width; x++) {

			var next = new createjs.Bitmap(this.tileset);
			next.x = (x * this.tilewidth);
			next.y = (y * this.tileheight);
			innerContainer.addChild(next);
		}
		
	}
	
	container.addChild(innerContainer);

	return container;
}
